<h1>Creation de compte </h1>

<%= form_for @user do |f| %>

	<%= custom_field_for f,  @user, :firstname do %>
		<%= f.text_field :firstname %>
	<% end %>

	<%= custom_field_for f,  @user, :lastname do %>
		<%= f.text_field :lastname %>
	<% end %>

	<%= custom_field_for f,  @user, :login do %>
		<%= f.text_field :login %>
	<% end %>

	<%= custom_field_for f,  @user, :password do %>
		<%= f.password_field :password %>
	<% end %>

	<%= custom_field_for f,  @user, :password_confirmation do %>
		<%= f.password_field :password_confirmation %>
	<% end %>

	<%= custom_field_for f,  @user, :job_id do %>
		<%= f.select :job_id, options_from_collection_for_select(Job.all, 'id', 'name', @user.job_id) %>
	<% end %>


	<%= f.submit %>



	

<br />
<br />
<br />	*champs obligatoire

<% end %>